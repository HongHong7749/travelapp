    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:icon="@drawable/logo_tourism"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
 
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name" >
 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditUserInfoActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ReserveActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".SpotDetailActivity" />
        <activity android:name=".SearchSpotInfoActivity" />
        <activity android:name=".LineDetailActivity" />
